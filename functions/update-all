# vim:et sts=2 sw=2 ft=zsh

builtin emulate -L zsh

tmux new-window -n update

tmux send-keys -t update "brew update && brew upgrade && exit" C-m

# allow for user input
tmux split-window -v

tmux send-keys -t update 'rustup update && exit' C-m
tmux split-window -v

tmux send-keys -t update 'cargo install-update -a && exit' C-m
tmux split-window -v

tmux send-keys -t update 'zimfw update && exit' C-m

echo "done updating"
